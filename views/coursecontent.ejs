<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>EduQuest - Course content</title>
    <%- include('partials/headerlinks.ejs') %>
  </head>

  <body>
    <!--  Body Wrapper -->
    <div
      class="page-wrapper"
      id="main-wrapper"
      data-layout="vertical"
      data-navbarbg="skin6"
      data-sidebartype="full"
      data-sidebar-position="fixed"
      data-header-position="fixed"
    >
      <%- include('partials/sidebar.ejs') %>
      <!--  Main wrapper -->
      <div class="body-wrapper">
        <%- include('partials/navbar.ejs') %>
        <div class="container-fluid">
          <div class="row" id="userCardsContainer">
            <% apiData.forEach(course => { %>
            <div class="col-md-4">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title"><%= course.name %></h5>
                  <p class="card-text">Course ID: <%=course.course_id%></p>
                  <p class="card-text">
                    Short Description: <%=course.short_description%>
                  </p>
                  <p class="card-text">
                    Long Description: <%=course.long_description%>
                  </p>
                  <p class="card-text">Video URL: <%=course.video_path%></p>
                  <p class="card-text">
                    Thumbnail URL: <%=course.thumbnail_path%>
                    <a
                      href="<%= admin %>/editcoursecontent"
                      onclick="saveCategoryData('<%= JSON.stringify(course) %>')"
                    >
                      <button
                        type="button"
                        class="btn btn-outline-secondary m-1"
                      >
                        Edit
                      </button>
                    </a>
                    <button
                      type="button"
                      class="btn btn-outline-danger m-1 deleteButton"
                      data-id="<%=course._id%>"
                    >
                      Delete
                    </button>
                  </p>
                </div>
              </div>
            </div>
            <% }); %>
          </div>
        </div>
      </div>
    </div>
    <%- include('partials/footerscripts.ejs') %>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll(".deleteButton").forEach((button) => {
          button.addEventListener("click", function () {
            const Id = this.getAttribute("data-id");
            const confirmDelete = window.confirm(
              "Are you sure you want to delete this?"
            );
            if (confirmDelete) {
              fetch(`/api/admin/deletecoursecontent/${Id}`, {
                method: "DELETE",
              })
                .then((response) => {
                  if (!response.ok) {
                    throw new Error("Network response was not ok");
                  }
                  console.log("API request successful");
                  window.location.reload();
                })
                .catch((error) => {
                  console.error(
                    "There was a problem with the API request:",
                    error
                  );
                });
            }
          });
        });
      });
    </script>
    <script>
      function saveCategoryData(Data) {
        console.log(Data);
        localStorage.setItem("course", Data);
      }
    </script>
  </body>
</html>
